<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.heitx.maserow_new.common.view.tableview_multi.TableViewMultiController">
   <children>
      <TableView fx:id="tvTable" editable="true">
         <columns>
            <TableColumn fx:id="tcId" editable="false" maxWidth="75.0" minWidth="75.0" prefWidth="75.0" text="entry" />
            <TableColumn fx:id="tcValue" editable="false" maxWidth="90.0" minWidth="90.0" text="value" />
            <TableColumn fx:id="tcName" editable="false" prefWidth="75.0" text="name" />
            <TableColumn fx:id="tcSelected" maxWidth="30.0" minWidth="40.0" prefWidth="40.0" sortable="false" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox>
         <children>
            <TextField fx:id="tfBitmask" text="0" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnConvert" mnemonicParsing="false" text="Convert" />
         </children>
      </HBox>
      <Label fx:id="labelStatus" text="status" />
   </children>
</VBox>
