<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.StackPane?>


<StackPane fx:id="spRoot" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.heitx.maserow_new.common.views.tableview_textarea.TableViewTextAreaController">
   <children>
      <SplitPane dividerPositions="0.5">
         <items>
            <TableView fx:id="tvTable" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <columns>
                  <TableColumn fx:id="tcId" editable="false" maxWidth="75.0" minWidth="75.0" prefWidth="75.0" text="id" />
                  <TableColumn fx:id="tcValue" editable="false" maxWidth="90.0" minWidth="90.0" text="value" />
                  <TableColumn fx:id="tcName" editable="false" prefWidth="75.0" text="name" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <TextArea fx:id="taDescription" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
         </items>
      </SplitPane>
   </children>
</StackPane>
