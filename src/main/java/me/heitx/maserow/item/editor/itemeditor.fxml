<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.heitx.maserow.">
  <top>
    <HBox alignment="CENTER_LEFT" spacing="5.0">
      <children>
        <Button fx:id="btnExecute" mnemonicParsing="false" text="Execute" />
        <Button fx:id="btnScreenshot" mnemonicParsing="false" text="Save as Image" />
        <MenuButton fx:id="mbSQL" mnemonicParsing="false" text="Save as SQL">
          <items>
            <MenuItem fx:id="miInsert" mnemonicParsing="false" text="INSERT" />
            <MenuItem fx:id="miUpdate" mnemonicParsing="false" text="UPDATE" />
            <MenuItem fx:id="miDelete" mnemonicParsing="false" text="DELETE" />
          </items>
        </MenuButton>
        <CheckBox fx:id="cbPreview" mnemonicParsing="false" text="Preview" />
      </children>
    </HBox>
  </top>
  <center>
    <VBox spacing="5.0" BorderPane.alignment="CENTER">
      <children>
            <fx:include source="build/itembuild_new.fxml" />
      </children>
      <BorderPane.margin>
        <Insets left="5.0" />
      </BorderPane.margin>
    </VBox>
  </center>
  <right>
    <VBox spacing="5.0" BorderPane.alignment="CENTER">
      <children>
        <fx:include source="preview/itempreview.fxml" />
            <FlowPane columnHalignment="CENTER" hgap="5.0" prefWrapLength="10.0" vgap="5.0" />
      </children>
         <BorderPane.margin>
            <Insets left="5.0" />
         </BorderPane.margin>
    </VBox>
  </right>
</BorderPane>
